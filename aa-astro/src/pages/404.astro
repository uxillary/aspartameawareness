---
import BaseLayout from "../layouts/BaseLayout.astro";
const title = "Page not found";
const description = "The page you’re looking for doesn’t exist or has moved.";
---
<BaseLayout {title} {description}>
  <main id="main" class="mx-auto max-w-3xl px-4 py-16">
    <h1 class="text-3xl font-semibold mb-4">404 — Page not found</h1>
    <p class="mb-6">Sorry! We couldn’t find that page. Try the navigation or go back to the homepage.</p>
    <a href="/" class="underline underline-offset-4">Return home</a>
  </main>
</BaseLayout>
